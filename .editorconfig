# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160
max_line_wrap = false

[*.py]
max_line_length = 160
quote_type = double

[*.{scss,js,html}]
indent_style = space
indent_size = 2
quote_type = double

[*.js]
indent_size = 2
quote_type = double
curly_bracket_next_line = false

[**.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab
